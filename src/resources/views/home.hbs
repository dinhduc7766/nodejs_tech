<div class="mt-4">
    <div class="row">
        {{#each courses}}
        <div class="col-lg-4">
            <div class="card mt-3">
                <a href="/courses/{{this.slug}}" class="text-decoration-none">
                    <img src="{{this.image}}" class="card-img-top" alt="{{this.name}}">
                </a>
                <div class="card-body">
                    <a href="/courses/{{this.slug}}">
                        <h5 class="card-title">{{this.name}}</h5>
                    </a>
                    <p class="card-text">{{this.description}}</p>
                    <a href="/courses/{{this.slug}}" class="btn btn-primary">
                        Mua khóa học
                    </a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
